<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_haze"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/linearMainDonPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHajmDownload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="2.3 مگ"
                    android:textColor="@color/maincolor"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="حجم فایل: "
                    android:textColor="@color/maincolor"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txtTimeDownload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="12:24"
                    android:textColor="@color/maincolor"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="مدت زمان: "
                    android:textColor="@color/maincolor"
                    android:textSize="10dp" />


                <TextView
                    android:id="@+id/txtNameDownload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="اول"
                    android:textColor="@color/maincolor"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="شماره دوره: "
                    android:textColor="@color/maincolor"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/progressDownload"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_weight="0.8"
                    android:progressTint="@color/white"
                    android:max="15"
                    android:progress="0" />

                <TextView
                    android:id="@+id/txtDownload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="دانلود"
                    android:textColor="@color/maincolor"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearPLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/btnPlay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_play" />

                <ImageView
                    android:id="@+id/btnStop"
                    android:layout_width="46dp"
                    android:background="@color/white"
                    android:layout_height="46dp"
                    android:visibility="visible"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_stop" />

                <SeekBar
                    android:id="@+id/seekPlay"
                    android:progressTint="@color/red"
                    android:background="@color/white"
                    android:progress="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progressPlay"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:foreground="@color/maincolor"
                    android:layout_weight="0.8"
                    android:max="15"
                    android:progress="10" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>